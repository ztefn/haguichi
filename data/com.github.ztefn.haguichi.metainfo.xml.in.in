<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name translate="no">@APP_NAME@</name>
  <summary>Manage your Hamachi networks</summary>
  <description>
    <p>Haguichi makes it a breeze to join, create and administer Hamachi networks.</p>
    <p>Features:</p>
    <ul>
      <li>Searchable, sortable and collapsible network list</li>
      <li>Sidebar for easy access to details and actions</li>
      <li>Desktop notifications to stay up to date of network events</li>
      <li>Commands that can be completely customized</li>
      <li>Backup and restore of your Hamachi configuration folder</li>
    </ul>
    <p><em>Please note: Requires installation of Hamachi on the system in order to use.</em></p>
  </description>
  <screenshots>
    <screenshot type="default">
      <caption>View your network list and client information</caption>
      <image scale="2">https://raw.githubusercontent.com/ztefn/haguichi/elementary/data/screenshots/1.png</image>
    </screenshot>
    <screenshot>
      <caption>View selected member details</caption>
      <image scale="2">https://raw.githubusercontent.com/ztefn/haguichi/elementary/data/screenshots/2.png</image>
    </screenshot>
    <screenshot>
      <caption>View selected network details</caption>
      <image scale="2">https://raw.githubusercontent.com/ztefn/haguichi/elementary/data/screenshots/3.png</image>
    </screenshot>
    <screenshot>
      <caption>Search your network list</caption>
      <image scale="2">https://raw.githubusercontent.com/ztefn/haguichi/elementary/data/screenshots/4.png</image>
    </screenshot>
    <screenshot>
      <caption>Join or create networks</caption>
      <image scale="2">https://raw.githubusercontent.com/ztefn/haguichi/elementary/data/screenshots/5.png</image>
    </screenshot>
  </screenshots>
  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>
  <recommends>
    <internet>always</internet>
  </recommends>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <branding>
    <color type="primary" scheme_preference="light">#ffdbbc</color>
    <color type="primary" scheme_preference="dark">#910e08</color>
  </branding>
  <content_rating type="oars-1.1" />
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <releases>
    <release version="1.152.0" date="2025-07-12">
      <description>
        <ul>
          <li>Within "Add Command" and "Edit Command" dialogs command variables can now be inserted directly from the popover into the command entries.</li>
          <li>Added more network list update interval options to preferences dialog.</li>
          <li>Added debug information to about dialog.</li>
          <li>Added Hungarian translation (thanks to therealmate).</li>
          <li>Updated Polish and Portuguese translations.</li>
        </ul>
      </description>
    </release>
    <release version="1.151.0" date="2025-02-19">
      <description>
        <ul>
          <li>Redesigned user interface utilizing GTK4 and libadwaita.</li>
          <li>Added preference for dark and light style or following the system mode.</li>
          <li>Added support for multiple search terms when searching networks and members.</li>
          <li>Changed online and total member count in sidebar to include the client itself.</li>
          <li>Changed accelerator to open preferences to Control+,.</li>
          <li>Changed default network list update interval to 30 seconds.</li>
          <li>Implemented Xdp.Portal to request permission to run in the background and to set the status.</li>
          <li>Added Finnish translation (thanks to Jiri Gr√∂nroos).</li>
          <li>Updated Brazilian Portuguese, Dutch, Indonesian, Japanese, Lithuanian, Russian, Spanish and Ukrainian translations.</li>
        </ul>
      </description>
    </release>
    <release version="1.146.1" date="2023-10-22">
      <description>
        <ul>
          <li>Implemented rounded bottom corners.</li>
          <li>Fixed styles for popover menus.</li>
          <li>Added margin for toolbar buttons in commands editor.</li>
          <li>Updated Spanish translation.</li>
        </ul>
      </description>
    </release>
    <release version="1.146.0" date="2023-02-01">
      <description>
        <ul>
          <li>Implemented separate thread and mode for configuring.</li>
          <li>Improved display of long text input in commands editor.</li>
          <li>Now using actual Gtk.SearchBar widget for search bar.</li>
          <li>Now using pill style action buttons in message box.</li>
          <li>Removed support for upstart to control the Hamachi service.</li>
          <li>Removed Control+F1 as accelerator to open keyboard shortcuts window.</li>
        </ul>
      </description>
    </release>
  </releases>
