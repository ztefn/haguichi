            "build-commands": [
                "perl Makefile.PL",
                "make install"
            ],
            "build-options": {
                "env": {
                    "PERL5LIB": "/app/lib/perl5",
                    "PERL_MM_OPT": "INSTALL_BASE=/app"
                }
            },
            "sources": [
                {
                    "type": "archive",
